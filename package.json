{
  "name": "clique",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev.js",
    "dev:docker": "next dev -H 0.0.0.0 -p 3000",
    "docker:dev": "npm run test:all && node scripts/docker-dev.mjs",
    "build": "npm run test:all && next build",
    "build:docker": "next build",
    "start": "next start",
    "lint": "eslint",
    "postinstall": "prisma generate",
    "db:seed": "ts-node --compiler-options {\\\"module\\\":\\\"commonjs\\\"} prisma/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test && npm run test:integration",
    "verify-build": "./scripts/test-build.sh",
    "hooks:install": "git config core.hooksPath .githooks",
    "hooks:status": "git config --get core.hooksPath || echo '(not set)'"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@hookform/resolvers": "^5.2.2",
